-- ordena todos los datps de la tabla "users" por edad (ascendente por defecto)
SELECT * FROM users ORDER BY age;

-- ordena todos los datps de la tabla "users" por edad (ascendente por defecto)
SELECT * FROM users ORDER BY age ASC;

-- ordena todos los datps de la tabla "users" por edad (descendente por defecto)
SELECT * FROM users ORDER BY age DESC;

-- ordena todos los datps de la tabla "users" por edad (ascendente por defecto)
SELECT * FROM users WHERE email = 'sara@gmail.com' ORDER BY age ASC;

-- ordena todos los datps de la tabla "users" por edad (descendente por defecto)
SELECT * FROM users WHERE email = 'sara@gmail.com' ORDER BY age DESC;